<script type="text/javascript">
          $(document).ready(function () {
        $("#task-processing").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            dataSource: [
                { text: "Execute all Tasks", value: "P" },
                { text: "Execute Tasks in Order", value: "S" }
            ],
            optionLabel: "-- Select Task Processing --",
            value: "@Model.taskProcessing" // Razor will inject "P" or "S" here
        });
    });

    function validate() {
        var ErrorFound = 0
        if (document.frmName.taskGroupLabel.value == "") {
            alert("Please enter the task group name.");
            document.frmName.taskGroupLabel.focus();
            ErrorFound = ErrorFound + 1
        }
        if (ErrorFound == 0) {
            document.frmName.submit();
        }
    }

</script>
